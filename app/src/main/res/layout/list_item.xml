<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="60dp" android:layout_width="match_parent"
    android:id="@+id/rel_checked_today"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/today_btn_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@color/colorPrimary"
        android:layout_marginStart="20dp"
        android:gravity="center_vertical"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/today_btn_med_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@color/colorDarkGray"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/today_btn_dose_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@color/colorGray"
        android:layout_below="@id/today_btn_med_tv"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:textSize="14sp" />
    <ImageButton
        android:id="@+id/list_item_1_today_btn"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_width="wrap_content"
        android:src="@android:drawable/checkbox_off_background"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:onClick="takeMed"
        android:layout_height="match_parent" />

</RelativeLayout>
